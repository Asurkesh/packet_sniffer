{
"version": "0.2.0",
"configurations": [
    {
    "name": "Отладка sniffer",
    "type": "cppdbg",
    "request": "launch",
    "program": "${workspaceFolder}/sniffer",
    "args": [],
    "stopAtEntry": false,
    "cwd": "${workspaceFolder}",
    "environment": [],
    "externalConsole": false,
    "MIMode": "gdb",
    "setupCommands": [
        {
        "description": "Включить формат печати для gdb",
        "text": "-enable-pretty-printing",
        "ignoreFailures": true
        }
    ],
    "preLaunchTask": "setcap sniffer",
    "miDebuggerPath": "/usr/bin/gdb"
    }
]
}
