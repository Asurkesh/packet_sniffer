{
  "label": "Скомпилировать sniffer",
  "type": "shell",
  "command": "gcc",
  "args": [
    "main.c",
    "-o",
    "sniffer",
    "-lpcap"
  ],
  "options": {
    "cwd": "${workspaceFolder}"
  },
  "problemMatcher": [],
  "group": {
    "kind": "build",
    "isDefault": true
  },
  "postBuildTask": {
    "label": "setcap sniffer"
  }
},
{
  "label": "setcap sniffer",
  "type": "shell",
  "command": "sudo setcap cap_net_raw,cap_net_admin=eip ${workspaceFolder}/sniffer"
}
